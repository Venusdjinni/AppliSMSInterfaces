<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:focusable="true"
                                    android:foreground="?attr/selectableItemBackground"
                                    android:id="@+id/item_groupe">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:padding="8dp">
        <android.support.v7.widget.AppCompatTextView
                android:layout_width="46dp"
                android:layout_height="46dp"
                android:text="A"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:background="@drawable/circle_letter_primary"
                android:gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:id="@+id/grpe_ic"/>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                android:layout_toRightOf="@id/grpe_ic"
                android:layout_toEndOf="@id/grpe_ic">
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Le nom du groupe"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/grpe_nom"/>
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/short_lorem_ipsum"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:id="@+id/grpe_infos"/>
        </LinearLayout>
    </RelativeLayout>

</android.support.v7.widget.CardView>