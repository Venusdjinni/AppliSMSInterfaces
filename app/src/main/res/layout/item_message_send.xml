<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:focusable="true"
              android:foreground="?attr/selectableItemBackground"
              android:id="@+id/item_message">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:padding="8dp">
            <android.support.v7.widget.AppCompatTextView
                    android:layout_width="46dp"
                    android:layout_height="46dp"
                    android:text="A"
                    android:textSize="24sp"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/circle_letter_primary"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/msg_ic"/>
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:layout_toRightOf="@id/msg_ic"
                    android:layout_toEndOf="@id/msg_ic">
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="0dp"
                        android:text="Le titre du message"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBlack"
                        android:id="@+id/msg_titre"/>
                <android.support.v7.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/msg_titre"
                        android:text="@string/short_lorem_ipsum"
                        android:maxLines="2"
                        android:id="@+id/msg_text"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:orientation="horizontal"
                        android:weightSum="3">
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                        <android.support.v7.widget.AppCompatImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_total_black"/>
                        <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:id="@+id/msg_c_total"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                        <android.support.v7.widget.AppCompatImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_sent_black"/>
                        <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:id="@+id/msg_c_sent"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                        <android.support.v7.widget.AppCompatImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginRight="8dp"
                                android:layout_marginEnd="8dp"
                                android:src="@drawable/ic_wrong_black"/>
                        <android.support.v7.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25"
                                android:id="@+id/msg_c_wrong"/>
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </RelativeLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginLeft="60dp"
                android:layout_marginStart="60dp"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                android:background="@color/colorGrey"/>
    </LinearLayout>
</android.support.v7.widget.CardView>